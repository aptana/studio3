<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.aptana.editor.html.HTMLEditor"
            contributorClass="com.aptana.editor.common.CommonTextEditorActionContributor"
            default="true"
            extensions="html,htm,xhtml,shtml"
            icon="icons/html.png"
            id="com.aptana.editor.html"
            name="%editor.html.name">
         <contentTypeBinding
               contentTypeId="com.aptana.contenttype.html">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="html,htm,xhtml,shtml"
            id="com.aptana.contenttype.html"
            name="%content-type.html.name"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.aptana.editor.html.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.workbench.texteditor.hyperlinkDetectorTargets">
      <target
            id="com.aptana.editor.html"
            name="%editor.html.name">
      </target>
   </extension>

   <extension
         point="com.aptana.index.core.fileIndexingParticipants">
      <fileIndexingParticipant
            class="com.aptana.editor.html.contentassist.index.HTMLFileIndexingParticipant">
         <contentTypeBinding
               contentTypeId="com.aptana.contenttype.html">
         </contentTypeBinding>
      </fileIndexingParticipant>
   </extension>
   <extension
         point="com.aptana.parsing.parser">
      <parser
            class="com.aptana.editor.html.parsing.HTMLParser"
            content-type="com.aptana.contenttype.html"
            language="text/html">
      </parser>
   </extension>
   <extension
         point="org.eclipse.ui.workbench.texteditor.hyperlinkDetectors">
      <hyperlinkDetector
            activate="true"
            class="com.aptana.editor.html.text.hyperlink.CSSClassHyperlinkDetector"
            id="com.aptana.editor.html.hyperlinkDetector"
            name="%hyperlinkDetector.cssclass.name"
            targetId="com.aptana.editor.html">
      </hyperlinkDetector>
   </extension>
   <extension
         point="com.aptana.preview.editors">
      <editor
            targetId="com.aptana.editor.html">
         <previewDelegate
               class="com.aptana.editor.html.preview.HTMLEditorPreviewDelegate">
         </previewDelegate>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="com.aptana.html.tagPair.occurrences"
            colorPreferenceKey="htmlTagPairOccurrenceIndicationColor"
            colorPreferenceValue="212,212,212"
            contributesToHeader="false"
            highlightPreferenceKey="htmlTagPairOccurrenceIndicationHighlighting"
            highlightPreferenceValue="true"
            isGoToNextNavigationTarget="true"
            isGoToNextNavigationTargetKey="isOccurrenceGoToNextNavigationTarget"
            isGoToPreviousNavigationTarget="true"
            isGoToPreviousNavigationTargetKey="isOccurrenceGoToPreviousNavigationTarget"
            label="%specification.tagpair.label"
            overviewRulerPreferenceKey="htmlTagPairOccurrenceIndicationInOverviewRuler"
            overviewRulerPreferenceValue="true"
            presentationLayer="4"
            showInNextPrevDropdownToolbarAction="true"
            showInNextPrevDropdownToolbarActionKey="showOccurrenceInNextPrevDropdownToolbarAction"
            textPreferenceKey="htmlTagPairOccurrenceIndication"
            textPreferenceValue="false"
            textStylePreferenceKey="htmlTagPairOccurrenceIndicationTextStyle"
            textStylePreferenceValue="NONE"
            verticalRulerPreferenceKey="htmlTagPairOccurrenceIndicationInVerticalRuler"
            verticalRulerPreferenceValue="false">
      </specification>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerSeverity="0"
            name="com.aptana.html.tagPair.occurrences"
            super="com.aptana.editor.common.occurrence">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="com.aptana.editor.common.preferences.EditorsPreferencePage"
            class="com.aptana.editor.html.preferences.HTMLPreferencePage"
            id="com.aptana.editor.html.preferences.HTMLPreferencePage"
            name="%page.html.name">
      </page>
   </extension>

   <extension
         point="com.aptana.editor.common.validator">
      <content-type
            name="%validator.language.html.name"
            id="com.aptana.contenttype.html">
      </content-type>
      <validator
            class="com.aptana.editor.html.validator.HTMLTidyValidator"
            content-type="com.aptana.contenttype.html"
            marker-type="com.aptana.editor.html.problem"
            name="%validator.tidy.name">
      </validator>
   </extension>
   <extension
         point="org.eclipse.core.filebuffers.annotationModelCreation">
      <factory
            class="com.aptana.editor.common.ExternalFileAnnotationModelFactory"
            contentTypeId="com.aptana.contenttype.html">
      </factory>
   </extension>
   <extension
         id="problem"
         name="%marker.html.name"
         point="org.eclipse.core.resources.markers">
      <super
            type="com.aptana.core.problem">
      </super>
      <persistent
            value="true">
      </persistent>
      <attribute
            name="id">
      </attribute>
      <attribute
            name="flags">
      </attribute>
      <attribute
            name="arguments">
      </attribute>
   </extension>
</plugin>
