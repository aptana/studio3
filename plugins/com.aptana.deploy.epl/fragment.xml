<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension-point id="deployWizards" name="%deployWizards.extension.name" schema="schema/deployWizards.exsd"/>

 <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.aptana.deploy.internal.handlers.RunDeployWizardHandler"
            id="com.aptana.deploy.commands.deploywizard"
            name="%DeployWizard.label">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
            <menuContribution
            locationURI="menu:com.aptana.explorer.deploy?endof=group.wizard">
         <command
               commandId="com.aptana.deploy.commands.deploywizard"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <not>
                     <or>
                        <reference
                              definitionId="com.appcelerator.titanium.isMobileProject">
                        </reference>
                        <reference
                              definitionId="com.appcelerator.titanium.isDesktopProject">
                        </reference>
                     </or>
                  </not>
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                     </adapt>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
      </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:com.aptana.explorer.deploy?endof=group.wizard">
         <command
               commandId="com.aptana.deploy.commands.deploywizard"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <with
                        variable="activePart">
                     <instanceof
                           value="org.eclipse.ui.IEditorPart">
                     </instanceof>
                  </with>
                  <with
                        variable="activeEditorInput">
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                     </adapt>
                  </with>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
</fragment>
