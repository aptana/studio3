<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="propertyDialogs" name="%extension-point.propertydialogs.name" schema="schema/propertyDialogs.exsd"/>
   <extension-point id="imageAssociations" name="%extension-point.imageassociations.name" schema="schema/imageAssociations.exsd"/>
   <extension-point id="accountsPreferencePage" name="%extension-point.accounts.name" schema="schema/accountsPreferencePage.exsd"/>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.aptana.ui.internal.WebPerspectiveFactory"
            icon="icons/web.png"
            id="com.aptana.ui.WebPerspective"
            name="%perspective.name.web">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.aptana.ui.WebPerspective">
         <viewShortcut
               id="com.aptana.explorer.view">
         </viewShortcut>
         <view
               id="org.eclipse.ui.navigator.ProjectExplorer"
               minimized="false"
               relationship="stack"
               relative="com.aptana.explorer.view"
               visible="true">
         </view>
         <viewShortcut
               id="org.eclipse.ui.navigator.ProjectExplorer">
         </viewShortcut>
         <view
               id="com.aptana.ui.io.remoteview"
               minimized="false"
               relationship="stack"
               relative="com.aptana.explorer.view"
               visible="false">
         </view>
         <viewShortcut
               id="com.aptana.ui.io.remoteview">
         </viewShortcut>
         <view
               id="org.eclipse.ui.views.ContentOutline"
               ratio="0.75"
               relationship="bottom"
               relative="com.aptana.explorer.view"
               visible="true">
         </view>
         <viewShortcut
               id="org.eclipse.ui.views.ContentOutline">
         </viewShortcut>
         <view
               id="com.aptana.samples.ui.SamplesView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.views.ContentOutline"
               visible="true">
         </view>
         <viewShortcut
               id="com.aptana.samples.ui.SamplesView">
         </viewShortcut>
         <view
               id="com.aptana.snippets.ui.views.SnippetsView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.views.ContentOutline"
               visible="true">
         </view>
         <viewShortcut
               id="com.aptana.snippets.ui.views.SnippetsView">
         </viewShortcut>
         <view
               id="com.aptana.terminal.views.terminal"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="true">
         </view>
         <viewShortcut
               id="com.aptana.terminal.views.terminal">
         </viewShortcut>
         <viewShortcut
               id="org.eclipse.ui.console.ConsoleView">
         </viewShortcut>
         <view
               id="org.eclipse.pde.runtime.LogView"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="false">
         </view>
         <viewShortcut
               id="org.eclipse.pde.runtime.LogView">
         </viewShortcut>
         <view
               id="org.eclipse.ui.views.ProblemView"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="true">
         </view>
         <viewShortcut
               id="org.eclipse.ui.views.ProblemView">
         </viewShortcut>
         <view
               id="org.eclipse.ui.views.TaskList"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="false">
         </view>
         <viewShortcut
               id="org.eclipse.ui.views.TaskList">
         </viewShortcut>
         <newWizardShortcut
               id="com.aptana.ui.wizards.new.file">
         </newWizardShortcut>
         <newWizardShortcut
               id="org.eclipse.ui.wizards.new.folder">
         </newWizardShortcut>
         <newWizardShortcut
               id="org.eclipse.ui.editors.wizards.UntitledTextFileWizard">
         </newWizardShortcut>
         <actionSet
               id="org.eclipse.ui.NavigateActionSet">
         </actionSet>
         <actionSet
               id="org.eclipse.ui.edit.text.actionSet.presentation">
         </actionSet>
         <actionSet
               id="com.aptana.ui.globalActionSet">
         </actionSet>
         <actionSet
               id="com.aptana.terminal.actionSet">
         </actionSet>
         <showInPart
               id="org.eclipse.ui.navigator.ProjectExplorer">
         </showInPart>
         <viewShortcut
               id="com.aptana.webserver.ui.view">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.aptana.ui.category"
            name="%CommandsCategory.name">
      </category>
      <command
            categoryId="com.aptana.ui.category"
            defaultHandler="com.aptana.ui.internal.commands.ViewReleaseNotesCommandHandler"
            description="%ViewReleaseNotes.description"
            id="com.aptana.ui.command.viewreleasenotes"
            name="%ViewReleaseNotes.label">
      </command>
      <command
            categoryId="com.aptana.ui.category"
            defaultHandler="com.aptana.ui.commands.SendFeedbackCommandHandler"
            description="%SendFeedbackCommand.description"
            id="com.aptana.ui.command.sendfeedback"
            name="%SendFeedbackCommand.label">
      </command>
      <command
            categoryId="com.aptana.ui.category"
            defaultHandler="com.aptana.ui.commands.ReportBugCommandHandler"
            description="%ReportBugCommand.description"
            id="com.aptana.ui.command.reportbug"
            name="%ReportBugCommand.label">
      </command>
      <command
            categoryId="com.aptana.ui.category"
            defaultHandler="com.aptana.ui.internal.commands.ViewLogCommandHandler"
            description="%ViewLogCommand.description"
            id="com.aptana.ui.command.viewlog"
            name="%ViewLogCommand.Label">
      </command>
      <command
            categoryId="com.aptana.ui.category"
            defaultHandler="com.aptana.ui.internal.commands.ClearLogCommandHandler"
            description="%ClearLogCommand.description"
            id="com.aptana.ui.command.clearlog"
            name="%ClearLogCommand.Label">
      </command>
      <command
            defaultHandler="com.aptana.ui.internal.commands.OpenInFinderHandler"
            id="com.aptana.ui.command.ShowInFileManager"
            name="%ShowInFileManager.label">
      </command>
      <command
            categoryId="com.aptana.ui.category"
            defaultHandler="com.aptana.ui.commands.DiagnosticHandler"
            description="%runDiagnostic.description"
            id="com.aptana.ui.command.diagnostic"
            name="%runDiagnostic.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:help?before=helpEnd">
         <menu
               id="aptanahelp"
               label="%Menu.Help.Aptana.label">
            <command
                  commandId="com.aptana.ui.command.diagnostic"
                  style="push">
            </command>
               <!--
            <command
                  commandId="com.aptana.ui.command.sendfeedback"
                  style="push">
            </command>
            <command
                  commandId="com.aptana.ui.command.reportbug"
                  style="push">
            </command>
            <separator
                  name="slot1"
                  visible="true">
            </separator>
            -->
            <command
                  commandId="com.aptana.ui.command.viewlog"
                  style="push">
            </command>
            <command
                  commandId="com.aptana.ui.command.clearlog"
                  style="push">
            </command>
            <!--
            <separator
                  name="slot2"
                  visible="true">
            </separator>
            <command
                  commandId="com.aptana.ui.command.viewreleasenotes"
                  style="push">
            </command>
            -->
         </menu>
         <separator
               name="helpStudio"
               visible="true">
         </separator>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?before=group.edit">
         <menu
               id="projectExplorerShowIn"
               label="%ShowIn.label">
            <dynamic
                  class="com.aptana.ui.commands.OpenFileManagerContributionItem"
                  id="com.aptana.ui.open.file.manager">
            </dynamic>
            <command
                  commandId="com.aptana.terminal.commands.openTerminal"
                  label="%command.terminal.label"
                  style="push">
            </command>
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false">
                  <or>
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                     </adapt>
                     <adapt
                           type="org.eclipse.core.filesystem.IFileStore">
                     </adapt>
                  </or>
               </iterate>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.aptana.ui.preferences.AptanaPreferencePage"
            id="com.aptana.ui.AptanaPreferencePage"
            name="%page.name Aptana Studio">
      </page>
      <page
            category="com.aptana.ui.AptanaPreferencePage"
            class="com.aptana.ui.preferences.TroubleshootingPreferencePage"
            id="com.aptana.ui.TroubleshootingPreferencePage"
            name="%page.troubleshooting.name Troubleshooting">
      </page>
      <page
            category="com.aptana.ui.AptanaPreferencePage"
            class="com.aptana.ui.preferences.AccountsPreferencePage"
            id="com.aptana.ui.accountsPreferencePage"
            name="%page.accounts.name Accounts">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="com.aptana.ui.globalActionSet"
            label="%actionSet.global.label"
            visible="false">
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.aptana.ui.contributions.inGlobalActionSet">
         <with
               variable="activeContexts">
            <iterate
                  operator="or">
               <equals
                     value="com.aptana.ui.globalActionSet">
               </equals>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.aptana.ui.wizards.category"
            name="%category.web.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.aptana"
            name="%category.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <category
            id="com.aptana.ui.wizards.import.category"
            name="%category.wizards.import.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <category
            id="com.aptana.ui.wizards.export.category"
            name="%category.wizards.export.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.ui.ide.FileStoreEditorInput"
            class="com.aptana.ui.internal.FileStoreEditorInputAdapterFactory">
         <adapter
               type="com.aptana.core.resources.IUniformResource">
         </adapter>
         <adapter
               type="org.eclipse.core.resources.IFile">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="com.aptana.ui.preferences.ProjectBuildPathPropertyPage"
            id="com.aptana.editor.common.projectBuildPath"
            name="%buildPath.property.page.name">
            <enabledWhen>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="com.aptana.projects.webnature">
               </test>
            </and>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="com.aptana.core.diagnostic">
      <diagnosticLog
            class="com.aptana.ui.EclipseDiagnosticLog"
            priority="0">
      </diagnosticLog>
   </extension>
   <extension
         point="org.eclipse.ui.console.consolePageParticipants">
      <consolePageParticipant
            class="com.aptana.ui.console.ConsoleAutoScrollPageParticipant"
            id="com.aptana.ui.console.autoScrollParticipant">
         <enablement>
            <instanceof
                  value="org.eclipse.debug.internal.ui.views.console.ProcessConsole">
            </instanceof>
         </enablement>
      </consolePageParticipant>
   </extension>
</plugin>
