<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="com.aptana.scripting.loadPaths" name="%extension-point.name" schema="schema/loadPaths.exsd"/>
   <extension-point id="com.aptana.scripting.frameworkFiles" name="%extension-point.name.0" schema="schema/frameworkFiles.exsd"/>
   <extension-point id="com.aptana.scripting.contextContributors" name="%extension-point.name.1" schema="schema/contextContributors.exsd"/>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.aptana.scripting.EarlyStartup">
      </startup>
   </extension>
   <extension
         point="com.aptana.scripting.loadPaths">
      <loadPath
            path="framework/">
      </loadPath>
   </extension>
   <extension
         point="com.aptana.scripting.frameworkFiles">
      <file
            name="ruble/bundle.rb">
      </file>
      <file
            name="ruble/command.rb">
      </file>
      <file
            name="ruble/logger.rb">
      </file>
      <file
            name="ruble/menu.rb">
      </file>
      <file
            name="ruble/snippet.rb">
      </file>
      <file
            name="ruble/context.rb">
      </file>
      <file
            name="ruble/platform.rb">
      </file>
      <file
            name="ruble/template.rb">
      </file>
      <file
            name="ruble/content_assist.rb">
      </file>
      <file
            name="ruble/env.rb">
      </file>
      <file
            name="ruble/smart_typing_pairs.rb">
      </file>
   </extension>
   <extension
         point="com.aptana.scripting.contextContributors">
      <contributor
            class="com.aptana.scripting.BundleContextContributor"
            id="com.aptana.scripting.model.BundleSupportContextContributor"
            name="Bundle Support Context Contributor">
      </contributor>
      <contributor
            class="com.aptana.scripting.FullnameEnvContextContributor"
            id="com.aptana.scripting.EnvContextContributor"
            name="Environment Contributor">
      </contributor>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="com.aptana.scripting.context"
            name="%context.scripting.name"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>

</plugin>
